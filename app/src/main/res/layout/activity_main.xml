<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:text="Instrucciones:\nIngrese los datos que contenga su tabla, una vez ingresados todos los datos de clic en la flecha. \nLa aplicación permite ingresar múltiples tablas y muestra los resultados conforme ingrese tablas."/>
            <ImageButton
                android:id="@+id/start"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_arrow"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Comencemos"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>